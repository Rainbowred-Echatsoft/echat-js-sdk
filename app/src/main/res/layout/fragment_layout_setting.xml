<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/text1"
            style="@style/FragmentTextviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置" />

        <LinearLayout
            style="@style/SettingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SettingItemTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="token:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            style="@style/SettingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SettingItemTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="appId:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_appid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            style="@style/SettingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SettingItemTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="encodingAesKey:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_encodingKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            style="@style/SettingItem"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SettingItemTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="companyId:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_companyid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            style="@style/SettingItem"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SettingItemTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="echatTag1:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_echatTag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            style="@style/SettingItem"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SettingItemTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="echatTag2:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_echatTag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            style="@style/SettingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SettingItemTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="routeEntranceId:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edit_routeEntranceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            style="@style/SettingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDevicetoken"
                style="@style/SettingItemTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_save"
            style="@style/EChatButton.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存" />

        <Button
            android:id="@+id/btn_qr"
            style="@style/EChatButton.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="二维码修改" />

        <Button
            android:id="@+id/btn_reset"
            style="@style/EChatButton.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="还原默认" />

    </LinearLayout>
</ScrollView>
